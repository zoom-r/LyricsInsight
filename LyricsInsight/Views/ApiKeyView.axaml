<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LyricsInsight.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LyricsInsight.Views.ApiKeyView"
             x:DataType="vm:ApiKeyViewModel">
    
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                Spacing="10" MaxWidth="500">
        
        <TextBlock Text="LyricsInsight"
                   FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center"/>
        
        <TextBlock Text="Моля, въведете вашия Google GenAI API ключ, за да продължите. Той ще бъде запазен локално за бъдещи стартирания."
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   Opacity="0.7"/>

        <TextBox Text="{Binding ApiKey, Mode=TwoWay}"
                 Watermark="AIzaSy..."
                 PasswordChar="*"
                 CornerRadius="20"
                 Padding="10"
                 Margin="0,10,0,0"/>

        <Button Content="Запази и Продължи"
                Command="{Binding SaveCommand}"
                HorizontalAlignment="Stretch"
                CornerRadius="20"/>
        
    </StackPanel>
</UserControl>