<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LyricsInsight.App"
             xmlns:local="using:LyricsInsight"
             xmlns:viewmodels="clr-namespace:LyricsInsight.ViewModels"
             xmlns:views="clr-namespace:LyricsInsight.Views"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
        <DataTemplate DataType="{x:Type viewmodels:SearchViewModel}">
            <views:SearchView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:SongDetailsViewModel}">
            <views:SongDetailsView />
        </DataTemplate>
    </Application.DataTemplates>
    
    <Application.Styles>
        <FluentTheme />
        
    </Application.Styles>
</Application>